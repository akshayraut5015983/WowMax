<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/swwh"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/swwh">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toool"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgBack"
                        android:layout_width="wrap_content"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/ic_keyboard_backspace_black_24dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/logo_wow" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:text="@string/app_name"
                            android:textColor="@color/gold"
                            android:textSize="18dp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ic_search_black_24dp"
                        android:visibility="gone" />

                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layVdo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <VideoView
                    android:id="@+id/vid"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/imgPreview"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/black_wowmax_lan" />

                <ImageView
                    android:id="@+id/omgPlay"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:background="@color/grea"
                    android:src="@drawable/ic_play_arrow_black_24dp" />

                <ProgressBar
                    android:id="@+id/pBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/buffering_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vid"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="8dp"
                    android:text="buffering_string"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layVdo"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTriler"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/round_green"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="3dp"
                    android:text="Trailer"
                    android:textColor="@color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/tvTriler"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgSetting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_baseline_settings_24"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imgShare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/imgSetting"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_baseline_share_24" />

                    <ImageView
                        android:id="@+id/imgFull"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/imgShare"
                        android:src="@drawable/ic_fullscreen_black_24dp"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>


        </RelativeLayout>

        <com.google.android.gms.ads.doubleclick.PublisherAdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:adSize="MEDIUM_RECTANGLE"
            app:adUnitId="@string/banner_ad_unit_id" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="vertical">


            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="@color/wh"
                android:src="@drawable/ic_play_arrow_black_24dp"
                android:visibility="gone" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_fullscreen_black_24dp"
                android:visibility="gone" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_red"
                        android:drawableRight="@drawable/ic_baseline_whatshot_24"
                        android:paddingRight="20dp"
                        android:text="Trailer"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_green"
                        android:drawableLeft="@drawable/ic_baseline_cloud_download_24"
                        android:paddingLeft="20dp"
                        android:text="Download"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/back_squre"
                                android:hint="Name of movie"
                                android:textColor="@color/white"
                                android:textColorHint="@color/greay"
                                android:textSize="22dp"
                                android:textStyle="bold" />


                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/back_squre"
                            android:layout_marginBottom="20dp"
                            android:paddingBottom="10dp"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/tvCat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Category - Crime, Action"
                                android:padding="3dp"
                                android:textColor="@color/white"
                                android:textColorHint="@color/greay"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/tvQlt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Quality - Full HD 1080"
                                android:padding="3dp"
                                android:textColor="@color/white"
                                android:textColorHint="@color/greay"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/tvRel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Release: 2019-02-03"
                                android:padding="3dp"
                                android:textColor="@color/white"
                                android:textColorHint="@color/greay"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/tvDur"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Duration - 2.21 hr."
                                android:padding="3dp"
                                android:textColor="@color/white"
                                android:textColorHint="@color/greay"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/tvWriter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Writer."
                                android:padding="3dp"
                                android:textColor="@color/white"
                                android:textColorHint="@color/greay"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/tvMusicDirec"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Music Directer"
                                android:padding="3dp"
                                android:textColor="@color/white"
                                android:textColorHint="@color/greay"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/tvCast"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Cast"
                                android:padding="3dp"
                                android:textColor="@color/white"
                                android:textColorHint="@color/greay"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/tvOneline"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="One Line-"
                                android:padding="3dp"
                                android:textColor="@color/white"
                                android:textColorHint="@color/greay"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/tvDesp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:hint="Description - Google material design icon for my resolution "
                                android:padding="3dp"
                                android:textColor="@color/whitee"
                                android:textColorHint="@color/greay"
                                android:textSize="18dp" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</ScrollView>
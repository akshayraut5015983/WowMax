<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_nt"
    tools:context=".activity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bott"
        android:background="#80000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!--  <androidx.cardview.widget.CardView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          app:cardCornerRadius="10dp">-->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/blank" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:text="vidmax"
                            android:textColor="@color/white"
                            android:textSize="55dp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                    </RelativeLayout>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/bla"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Sign in"
                            android:textColor="@color/redd"
                            android:textSize="22dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edMob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/wh"
                            android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                            android:hint="Enter mobile "
                            android:inputType="number"
                            android:maxLength="10"
                            android:padding="8dp"
                            android:paddingLeft="30dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/wh"
                            android:textStyle="bold" />


                        <EditText
                            android:id="@+id/edPass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@color/wh"
                            android:drawableStart="@drawable/ic_lock_open_black_24dp"
                            android:hint="Enter Password"
                            android:inputType="textPassword"
                            android:padding="8dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/wh"
                            android:textStyle="bold" />


                        <Button
                            android:id="@+id/imgShow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/ic_baseline_remove_red_eye_24"
                            android:src="@drawable/ic_keyboard_backspace_black_24dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvForgotPas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="right"
                            android:padding="5dp"
                            android:text="Forgot password"
                            android:textColor="@color/whitee"
                            android:textSize="18dp" />

                        <Button
                            android:id="@+id/btnLlogin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="40dp"
                            android:background="@drawable/btn_squre"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="Sign In"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:textStyle="bold" />



                        <TextView
                            android:id="@+id/btnRegister"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:background="#80000000"
                            android:gravity="center"
                            android:paddingLeft="20dp"
                            android:paddingTop="5dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="5dp"
                            android:text="New to Wowmax? Sign up now...!"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bott"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="5dp"
        android:background="#80000000"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#20000000"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Â© Copyright 2020. All Rights Reserved"
                android:textColor="@color/whitee" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Swaliya softech pvt. ltd."
                android:textColor="@color/whitee" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>